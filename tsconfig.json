{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./Build/TypeScript",
    "paths": {
      "@cesium/engine": ["./packages/engine/Source/index.ts"],
      "@cesium/engine/*": ["./packages/engine/Source/*"],
      "@cesium/widgets": ["./packages/widgets/Source/index.ts"],
      "@cesium/widgets/*": ["./packages/widgets/Source/*"]
    }
  },
  "references": [
    { "path": "./packages/engine" },
    { "path": "./packages/widgets" }
  ],
  "include": [
    "scripts/**/*.ts",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "packages/sandcastle/scripts/**/*.ts",
    "packages/sandcastle/vite*.ts"
  ],
  "exclude": [
    "node_modules",
    "Build",
    "Source",
    "Specs",
    "Documentation",
    "packages/*/node_modules",
    "packages/sandcastle/gallery",
    "packages/sandcastle/src",
    "packages/sandcastle/templates"
  ]
}
